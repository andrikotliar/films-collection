{
  "name": "@films-collection/api",
  "private": "true",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "db:migration:gen": "drizzle-kit generate",
    "db:migration:apply": "drizzle-kit migrate",
    "check": "tsc --noEmit",
    "lint": "eslint . --quiet --ext .ts",
    "api:generate": "tsx src/scripts/generate-client.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/static": "^8.2.0",
    "@films-collection/eslint-config": "workspace:^",
    "@films-collection/shared": "workspace:^",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.6.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^6.1.0",
    "pg": "^8.18.0",
    "sanitize-html": "^2.16.0",
    "tsc-alias": "^1.8.16",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.16.0",
    "@types/sanitize-html": "^2.16.0",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2",
    "zod-to-ts": "^2.0.0"
  },
  "author": "Andrii Kotliar",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrikotliar/films-collection/tree/main/server"
  }
}