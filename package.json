{
  "name": "films-collection",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter ./apps/api run build && pnpm --filter ./apps/web run build",
    "build:container": "docker compose -f docker-compose.yml up -d --build",
    "db:client:generate": "cd apps/api && pnpm db:client:generate",
    "db:init": "cd apps/api && pnpm db:migrate",
    "db:start": "docker compose --env-file=apps/api/.env up database -d",
    "dev": "pnpm db:start && pnpm run -r --parallel --aggregate-output dev",
    "start:prod": "cd apps/api && pnpm db:deploy && pnpm start",
    "lint:api": "cd apps/api && pnpm run lint",
    "lint:web": "cd apps/web && pnpm run lint"
  },
  "author": "Andrii Kotliar",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrikotliar/films-collection"
  }
}