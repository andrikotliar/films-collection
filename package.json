{
  "name": "films-collection",
  "private": true,
  "type": "module",
  "scripts": {
    "install:client": "cd client && pnpm install",
    "install:server": "cd server && pnpm install",
    "install:all": "pnpm install:server && pnpm install:client",
    "dev:client": "cd client && pnpm dev",
    "dev:server": "cd server && pnpm dev",
    "start:db": "docker compose --env-file=server/.env up database -d",
    "build:client": "cd client && pnpm build",
    "build:server": "cd server && pnpm build",
    "build:container": "docker compose --env-file=server/.env up -d --build",
    "build:all": "pnpm build:server && pnpm build:client",
    "db:init": "cd server && pnpm db:migrate"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "author": "Andrii Kotliar",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrikotliar/films-collection"
  }
}